= form_for(@blog_post) do |f|
  - if @blog_post.errors.any?
    #error_explanation
      %h2
        = pluralize(@blog_post.errors.count, 'error') 
        %span "prohibited this blog_post from being saved:"
      %ul
        -@blog_post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, placeholder: 'Your title', autofocus: true

  .field
    = f.label :content
    = f.text_area :content, placeholder: 'Your article'

  .actions
    = f.submit "Update", class: "btn"
    = link_to 'Cancel', blog_posts_path